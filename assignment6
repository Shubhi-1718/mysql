CREATE TABLE CLIENTMASTER(CLIENT_NO VARCHAR2(6) CONSTRAINT cm_cn_pk PRIMARY KEY CONSTRAINT cm_cn_ck CHECK (CLIENT_NO LIKE 'C%'), NAME VARCHAR2(20) CONSTRAINT cm_name_nn NOT NULL, CITY VARCHAR2(20) CONSTRAINT cm_city_ck CHECK (CITY IN ('DELHI','MUMBAI','CHENNAI')),PINCODE NUMBER(6),STATE VARCHAR(20), BAL_DUE NUMBER(10,2),EMAIL VARCHAR(30) CONSTRAINT cm_email_unq UNIQUE);

CREATE TABLE PRODUCTMASTER(PRODUCTNO VARCHAR2(6) CONSTRAINT pm_pn_pk PRIMARY KEY CONSTRAINT pm_pn_ck CHECK (PRODUCTNO LIKE 'P%'), NAME VARCHAR2(20) CONSTRAINT pm_name_nn NOT NULL, UNITMEASURE VARCHAR2(10) CONSTRAINT pm_um_nn NOT NULL, QTYONHAND NUMBER(8) CONSTRAINT pm_qoh_nn NOT NULL ,REORDERLVL NUMBER(8)  CONSTRAINT pm_rol_nn NOT NULL , SELLPRICE NUMBER(8,2) CONSTRAINT pm_sp_nn NOT NULL CONSTRAINT pm_sp_ck CHECK(SELLPRICE>0),COSTPRICE NUMBER(8,2) CONSTRAINT pm_cp_nn NOT NULL CONSTRAINT pm_cp_ck CHECK(COSTPRICE>0), CONSTRAINT pm_qoh_ck CHECK(QTYONHAND>=REORDERLVL));

CREATE TABLE SALESMAN_MASTER(SALESMAN_NO VARCHAR2(6) CONSTRAINT sm_sn_pk PRIMARY KEY CONSTRAINT sm_sn_ck CHECK (SALESMAN_NO LIKE 'S%'), SAL_NAME VARCHAR2(20) CONSTRAINT sm_name_nn NOT NULL, ADDRESS VARCHAR(40) CONSTRAINT sm_add_nn NOT NULL, CITY VARCHAR2(20), STATE VARCHAR(20), PINCODE NUMBER(6), SAL_AMT NUMBER(8,2) CONSTRAINT sm_samt_nn NOT NULL CONSTRAINT sm_samt_ck CHECK(SAL_AMT>0), TGT_TO_GET NUMBER(8,2) CONSTRAINT sm_tgt_nn NOT NULL CONSTRAINT sm_tgt_ck CHECK(TGT_TO_GET>0), YTD_SALES NUMBER(8,2) CONSTRAINT sm_ydt_nn NOT NULL CONSTRAINT sm_ydt_ck CHECK(YTD_SALES>0), REMARKS VARCHAR(30));

CREATE TABLE SALES_ORDER(ORDER_NO VARCHAR2(6) CONSTRAINT so_on_pk PRIMARY KEY CONSTRAINT so_on_ck CHECK (ORDER_NO LIKE 'O%'), ORDER_DATE DATE CONSTRAINT so_date_nn NOT NULL, CLIENT_NO VARCHAR2(6) CONSTRAINT so_cn_fk REFERENCES CLIENTMASTER(CLIENT_NO), DELY_ADD VARCHAR(25), SALESMAN_NO VARCHAR2(6) CONSTRAINT so_sn_fk REFERENCES SALESMAN_MASTER(SALESMAN_NO),DELY_TYPE CHAR(1) DEFAULT 'F', BILLED_YN CHAR(1) CONSTRAINT so_byn_ck CHECK(BILLED_YN IN('Y','N')),DELY_DATE DATE,ORDER_STATUS VARCHAR2(10) CONSTRAINT so_os_ck CHECK (ORDER_STATUS IN('IP','F','C')),CONSTRAINT so_dd_ck CHECK(DELY_DATE>ORDER_DATE),CONSTRAINT so_dt_ck CHECK (DELY_TYPE IN('D','F')));

CREATE TABLE SALES_ORDER_DETAILS(ORDER_NO VARCHAR(6) CONSTRAINT sod_on_pk PRIMARY KEY,PRODUCT_NO VARCHAR(6) CONSTRAINT sod_pn_fk REFERENCES PRODUCTMASTER(PRODUCTNO),QTY_ORDER NUMBER(8),QTY_DISP NUMBER(8));

